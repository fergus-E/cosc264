import socket

s = socket.socket()
PORT = input(int())
HOST = socket.gethostname()
s.bind((HOST PORT))
s.listen()
print("waiting for connections..")
conn addr =s.accept()
print(addr "has connected to the server")

filename = input(str("Please enter the filename"))

file = open(filename 'rb')
file_data = file.read(40)
conn.send(file_data)


